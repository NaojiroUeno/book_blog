<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <p>Title</p>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <p>Option</p>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>